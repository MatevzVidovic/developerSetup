#!/bin/bash
# Show diff between commit ranges
# Usage: git-diff-range [start_commit] [end_commit]
# Example: git-diff-range HEAD~5 HEAD

START_COMMIT=${1:-"HEAD~1"}
END_COMMIT=${2:-"HEAD"}

echo "ğŸ” Diff from $START_COMMIT to $END_COMMIT:"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"

echo ""
echo "ğŸ“ Files changed:"
git diff --name-status $START_COMMIT..$END_COMMIT

echo ""
echo "ğŸ“Š Summary:"
git diff --stat $START_COMMIT..$END_COMMIT

echo ""
echo "ğŸ” Detailed diff:"
echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
git diff --color=always $START_COMMIT..$END_COMMIT